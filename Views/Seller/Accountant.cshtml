        <div class="d-flex align-items-center gap-4">
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Help</a>
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Terms</a>
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Privacy</a>
        </div>
    </footer>
    <!-- [ Footer ] end -->
</main>

<style>
    .avatar {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }
    .avatar i {
        font-size: 24px;
    }
    .chart-container {
        position: relative;
    }
</style>

<script>
    // Định dạng số tiền
    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', { 
            style: 'currency', 
            currency: 'VND',
            maximumFractionDigits: 0
        }).format(amount);
    }

    // Lấy dữ liệu thống kê từ API
    async function fetchStoreStatistics() {
        try {
            const response = await app.services.store.fetchApi(`/${app.storeId}/get-statistics-store`);
            console.log(response);
            
            if (response && response.success && response.data) {
                const data = response.data;
                
                // Cập nhật các thông số
                document.getElementById('totalOrders').textContent = data.totalOrders;
                document.getElementById('totalProducts').textContent = data.totalProduct;
                document.getElementById('emptyStockProducts').textContent = data.totalProductEmptyStock;
                document.getElementById('monthlyRevenue').textContent = formatCurrency(data.totalRenenvue);
                
                // Cập nhật biểu đồ
                updateRevenueChart(data.listRenenvueInYear);
            }
        } catch (error) {
            console.error("Lỗi khi lấy dữ liệu thống kê:", error);
        }
    }
    
    // Cập nhật biểu đồ với dữ liệu mới
    function updateRevenueChart(revenueData) {
        // Lấy năm hiện tại
        const currentYear = new Date().getFullYear();
        
        // Tạo mảng label cho các tháng
        const monthLabels = Array.from({length: 12}, (_, i) => `T${i+1}/${currentYear}`);
        
        // Chuyển đổi dữ liệu doanh thu sang đơn vị triệu đồng cho dễ hiển thị
        const revenueInMillions = revenueData.map(value => value / 1000000);
        
        // Cấu hình biểu đồ
        var revenueOptions = {
            series: [{
                name: 'Doanh thu (triệu đồng)',
                data: revenueInMillions
            }],
            chart: {
                type: 'area',
                height: 300,
                toolbar: {
                    show: false
                }
            },
            colors: ['#0d6efd'],
            fill: {
                type: 'gradient',
                gradient: {
                    shadeIntensity: 1,
                    opacityFrom: 0.7,
                    opacityTo: 0.3,
                    stops: [0, 90, 100]
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'smooth',
                width: 2
            },
            xaxis: {
                categories: monthLabels
            },
            yaxis: {
                min: 0
            },
            tooltip: {
                theme: 'light',
                y: {
                    formatter: function(val) {
                        return val + ' triệu đồng'
                    }
                }
            }
        };

        // Tạo biểu đồ mới
        var revenueChart = new ApexCharts(document.querySelector("#revenueChart"), revenueOptions);
        revenueChart.render();
    }

    // Gọi hàm lấy dữ liệu khi trang được tải
    document.addEventListener('DOMContentLoaded', fetchStoreStatistics);

    // Xử lý chuyển đổi thời gian thống kê
    document.querySelectorAll('.card-toolbar .btn-group .btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.card-toolbar .btn-group .btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
        });
    });
</script> 