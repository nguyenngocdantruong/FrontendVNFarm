@{
    Layout = "_LayoutSeller";
    ViewBag.Title = "Cài đặt";
}

<main class="nxl-container">
    <div class="nxl-content">
        <!-- [ page-header ] start -->
        <div class="page-header">
            <div class="page-header-left d-flex align-items-center">
                <div class="page-header-title">
                    <h5 class="m-b-10">Cài Đặt Tài Khoản</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                    <li class="breadcrumb-item">Cài đặt</li>
                </ul>
            </div>
        </div>
        <!-- [ page-header ] end -->
        <!-- [ Main Content ] start -->
        <div class="main-content">
            <div class="row">
                <div class="col-md-4">
                    <!-- Menu cài đặt -->
                    <div class="card">
                        <div class="card-body">
                            <div class="settings-menu">
                                <div class="settings-menu-item active" data-target="profile">
                                    <i class="feather-user"></i>
                                    <span>Thông tin cá nhân</span>
                                </div>
                                <div class="settings-menu-item" data-target="shop">
                                    <i class="feather-shopping-bag"></i>
                                    <span>Thông tin Shop</span>
                                </div>
                                <div class="settings-menu-item text-danger" data-target="logout">
                                    <i class="feather-log-out"></i>
                                    <span>Đăng xuất</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <!-- Thông tin cá nhân -->
                    <div class="card settings-content" id="profile">
                        <div class="card-header">
                            <h5 class="card-title">Thông Tin Cá Nhân</h5>
                        </div>
                        <div class="card-body">
                            <form id="sellerProfileForm" enctype="multipart/form-data">
                                <div class="text-center mb-4">
                                    <img id="sellerAvatarPreview" src="assets/images/user/avatar-1.jpg" alt="Avatar" class="avatar">
                                    <input type="file" name="ImageFile" id="sellerImageFile" class="form-control mt-2" accept="image/*">
                                    <input type="hidden" name="ImageUrl" id="sellerImageUrl">
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Họ và tên</label>
                                        <input type="text" class="form-control" name="FullName" id="sellerFullName" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" name="Email" id="sellerEmail" readonly required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Số điện thoại</label>
                                        <input type="tel" class="form-control" name="PhoneNumber" id="sellerPhoneNumber" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Địa chỉ</label>
                                        <input type="text" class="form-control" name="Address" id="sellerAddress">
                                    </div>
                                </div>
                                <fieldset>
                                    <strong>Thay đổi mật khẩu</strong>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Mật khẩu mới (để trống nếu không thay đổi):</label>
                                            <input type="password" name="PasswordNew" id="sellerPasswordNew" class="form-control mb-2">
                                            <label>Xác nhận mật khẩu mới:</label>
                                            <input type="password" name="ConfirmPassword" id="sellerConfirmPassword" class="form-control">
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="text-end mt-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="feather-save me-2"></i>
                                        Lưu thay đổi
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Thông tin Shop -->
                    <div class="card settings-content d-none" id="shop">
                        <div class="card-header">
                            <h5 class="card-title">Thông Tin Shop</h5>
                        </div>
                        <div class="card-body">
                            <form id="shopForm" enctype="multipart/form-data">
                                <div class="text-center mb-4">
                                    <img id="shopLogoPreview" src="assets/images/shop/logo.jpg" alt="Shop Logo" class="shop-logo">
                                    <input type="file" name="LogoFile" id="shopLogoFile" class="form-control mt-2" accept="image/*">
                                    <input type="hidden" name="LogoUrl" id="shopLogoUrl">
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Tên shop</label>
                                        <input type="text" class="form-control" name="Name" id="shopName" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" name="Email" id="shopEmail" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Số điện thoại</label>
                                        <input type="tel" class="form-control" name="PhoneNumber" id="shopPhoneNumber" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Địa chỉ</label>
                                        <input type="text" class="form-control" name="Address" id="shopAddress" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mô tả shop</label>
                                    <textarea class="form-control" name="Description" id="shopDescription" rows="3" required></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="form-label">Loại hình kinh doanh</label>
                                        <select class="form-select" name="BusinessType" id="shopBusinessType">
                                            <option value="0">Hộ nông dân</option>
                                            <option value="1">Doanh nghiệp</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="feather-save me-2"></i>
                                        Lưu thay đổi
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Đăng xuất -->
                    <div class="card settings-content d-none" id="logout">
                        <div class="card-header">
                            <h5 class="card-title">Đăng Xuất</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <div class="mb-4">
                                    <i class="feather-log-out text-danger" style="font-size: 48px;"></i>
                                </div>
                                <h6>Bạn có chắc chắn muốn đăng xuất?</h6>
                                <p class="text-muted">Bạn sẽ cần đăng nhập lại để tiếp tục sử dụng</p>
                                <div class="d-flex justify-content-center gap-2">
                                    <button type="button" class="btn btn-light">
                                        Hủy
                                    </button>
                                    <button type="button" class="btn btn-danger">
                                        <i class="feather-log-out me-2"></i>
                                        Đăng xuất
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
    <!-- [ Footer ] start -->
    <footer class="footer">
        <p class="fs-11 text-muted fw-medium text-uppercase mb-0 copyright">
            <span>Copyright ©</span>
            
        </p>
        <div class="d-flex align-items-center gap-4">
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Help</a>
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Terms</a>
            <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Privacy</a>
        </div>
    </footer>
    <!-- [ Footer ] end -->
</main>

<style>
    .settings-menu {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .settings-menu-item {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
    }
    .settings-menu-item:hover {
        background-color: #f8f9fa;
    }
    .settings-menu-item.active {
        background-color: #e9ecef;
        color: #0d6efd;
    }
    .settings-menu-item i {
        margin-right: 10px;
        font-size: 18px;
    }
    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .password-strength {
        margin-top: 5px;
    }
    .shop-logo {
        width: 150px;
        height: 150px;
        border-radius: 8px;
        object-fit: cover;
        border: 3px solid #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
</style>

<script type="module">
import {BaseService} from "/Custom/BaseService.js";
import url from "/Custom/endpoints.js";
import Toast from "/Custom/Toast_Seller.js";

const token = localStorage.getItem('accessToken');
const sellerId = localStorage.getItem('id');
const storeId = localStorage.getItem('storeId');
const userUrl = url.base + "/Users";
const userService = new BaseService(userUrl, token);
const shopUrl = url.base + "/Store";
const shopService = new BaseService(shopUrl, token);

// ----------- THÔNG TIN SELLER (CÁ NHÂN) -----------
if (token && sellerId) {
    userService.fetchApi("/user-info?userId=" + sellerId, 'POST', token).then(response => {
        if (response && response.success && response.data) {
            const userData = response.data;
            document.getElementById('sellerFullName').value = userData.fullName || '';
            document.getElementById('sellerEmail').value = userData.email || '';
            document.getElementById('sellerPhoneNumber').value = userData.phoneNumber || '';
            document.getElementById('sellerAddress').value = userData.address || '';
            document.getElementById('sellerImageUrl').value = userData.imageUrl || '';
            if (userData.imageUrl) {
                document.getElementById('sellerAvatarPreview').src = `${url.baseUrl}/img/Users/${userData.imageUrl}`;
            }
        }
    }).catch(error => {
        Toast.error("Lỗi khi lấy thông tin cá nhân!");
    });
    document.getElementById('sellerImageFile').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('sellerAvatarPreview').src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });
    document.getElementById('sellerProfileForm').addEventListener('submit', function(event) {
        event.preventDefault();
        const fullName = document.getElementById('sellerFullName').value.trim();
        const email = document.getElementById('sellerEmail').value.trim();
        const phoneNumber = document.getElementById('sellerPhoneNumber').value.trim();
        const address = document.getElementById('sellerAddress').value.trim();
        const passwordNew = document.getElementById('sellerPasswordNew').value;
        const confirmPassword = document.getElementById('sellerConfirmPassword').value;
        if (!fullName) { Toast.error("Vui lòng nhập họ và tên!"); return; }
        if (!email) { Toast.error("Vui lòng nhập email!"); return; }
        if (!phoneNumber) { Toast.error("Vui lòng nhập số điện thoại!"); return; }
        if (passwordNew && passwordNew !== confirmPassword) {
            Toast.error("Mật khẩu mới và xác nhận mật khẩu không khớp!");
            return;
        }
        const formData = new FormData();
        formData.append('Id', sellerId);
        formData.append('FullName', fullName);
        formData.append('Email', email);
        formData.append('PhoneNumber', phoneNumber);
        formData.append('Address', address);
        formData.append('ImageUrl', document.getElementById('sellerImageUrl').value);
        if (passwordNew) formData.append('PasswordNew', passwordNew);
        const imageFile = document.getElementById('sellerImageFile').files[0];
        if (imageFile) formData.append('ImageFile', imageFile);
        userService.fetchApi(`/${sellerId}`, 'PUT', formData, true)
            .then(response => {
                if (response && response.success) {
                    Toast.success("Cập nhật thông tin thành công!");
                } else {
                    Toast.error(response?.message || "Cập nhật thông tin thất bại!");
                }
            })
            .catch(error => {
                Toast.error("Lỗi khi cập nhật thông tin!");
            });
    });
}
// ----------- THÔNG TIN SHOP -----------
if (token && storeId) {
    shopService.fetchApi(`/${storeId}`, 'GET').then(response => {
        if (response && response.success && response.data) {
            const shop = response.data;
            document.getElementById('shopName').value = shop.name || '';
            document.getElementById('shopDescription').value = shop.description || '';
            document.getElementById('shopAddress').value = shop.address || '';
            document.getElementById('shopPhoneNumber').value = shop.phoneNumber || '';
            document.getElementById('shopEmail').value = shop.email || '';
            document.getElementById('shopLogoUrl').value = shop.logoUrl || '';
            document.getElementById('shopBusinessType').value = shop.businessType;
            if (shop.logoUrl) {
                document.getElementById('shopLogoPreview').src = `${url.baseUrl}/img/Stores/${shop.logoUrl}`;
            }
        }
    }).catch(error => {
        Toast.error("Lỗi khi lấy thông tin shop!");
    });
    document.getElementById('shopLogoFile').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('shopLogoPreview').src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });
    document.getElementById('shopForm').addEventListener('submit', function(event) {
        event.preventDefault();
        const formData = new FormData();
        formData.append('Name', document.getElementById('shopName').value);
        formData.append('Description', document.getElementById('shopDescription').value);
        formData.append('Address', document.getElementById('shopAddress').value);
        formData.append('PhoneNumber', document.getElementById('shopPhoneNumber').value);
        formData.append('Email', document.getElementById('shopEmail').value);
        formData.append('BusinessType', document.getElementById('shopBusinessType').value);
        formData.append('LogoUrl', document.getElementById('shopLogoUrl').value);
        formData.append('UserId', sellerId);
        formData.append('Id', storeId);
        const logoFile = document.getElementById('shopLogoFile').files[0];
        if (logoFile) formData.append('LogoFile', logoFile);
        shopService.fetchApi(`/${storeId}`, 'PUT', formData, true)
            .then(response => {
                if (response && response.success) {
                    Toast.success("Cập nhật thông tin shop thành công!");
                } else {
                    Toast.error(response?.message || "Cập nhật thất bại!");
                }
            })
            .catch(error => {
                Toast.error("Lỗi khi cập nhật thông tin shop!");
            });
    });
}
</script>

<script>
    // Xử lý chuyển đổi tab cài đặt
    document.querySelectorAll('.settings-menu-item').forEach(item => {
        item.addEventListener('click', function() {
            // Xóa active class từ tất cả các menu item
            document.querySelectorAll('.settings-menu-item').forEach(i => i.classList.remove('active'));
            // Thêm active class cho menu item được click
            this.classList.add('active');
            
            // Ẩn tất cả các content
            document.querySelectorAll('.settings-content').forEach(content => content.classList.add('d-none'));
            // Hiển thị content tương ứng
            const target = this.getAttribute('data-target');
            document.getElementById(target).classList.remove('d-none');
        });
    });

    // Xử lý đăng xuất
    document.querySelector('#logout .btn-danger').addEventListener('click', function() {
        if (confirm('Bạn có chắc chắn muốn đăng xuất?')) {
            // Xử lý đăng xuất ở đây
            window.location.href = '/Account/Logout';
        }
    });
</script> 