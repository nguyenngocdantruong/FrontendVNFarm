                                <h4 class="mt-4 mb-3">Thông tin cửa hàng</h4>
                                
                                <input type="text" name="storeName" id="storeName" placeholder="Tên cửa hàng*">
                                <div class="error-message" id="storeNameError"></div>
                                
                                <textarea name="storeDescription" id="storeDescription" placeholder="Mô tả cửa hàng*" rows="3" class="form-control mb-3"></textarea>
                                <div class="error-message" id="storeDescriptionError"></div>
                                
                                <input type="text" name="storeAddress" id="storeAddress" placeholder="Địa chỉ cửa hàng*">
                                <div class="error-message" id="storeAddressError"></div>
                                
                                <input type="text" name="storePhoneNumber" id="storePhoneNumber" placeholder="Số điện thoại cửa hàng*">
                                <div class="error-message" id="storePhoneNumberError"></div>
                                
                                <input type="text" name="storeEmail" id="storeEmail" placeholder="Email cửa hàng (có thể để trống)">
                                <div class="error-message" id="storeEmailError"></div>
                                
                                <div class="mb-3">
                                    <label>Loại hình kinh doanh:</label>
                                    <select name="businessType" id="businessType" class="form-control">
                                        <option value="0">Nông dân</option>
                                        <option value="1">Doanh nghiệp</option>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label>Logo cửa hàng:</label>
                                    <input type="file" name="logoFile" id="logoFile" class="form-control" accept="image/*">
                                    <div class="error-message" id="logoFileError"></div>
                                </div>
                            </div>
                            
