    <script type="module">
        import {BaseService} from "/Custom/BaseService.js";
        import url from "/Custom/endpoints.js";
        import key from "/Custom/jwt.js";

        const authUrl = url.base + "/Auth";
        const authService = new BaseService(authUrl);

        document.getElementById('userRole').addEventListener('change', function() {
            const selectedRole = this.value;
            const storeInfoSection = document.getElementById('storeInfoSection');
            
            if (selectedRole === '2') {
                storeInfoSection.style.display = 'block';
            } else {
                storeInfoSection.style.display = 'none';
            }
        });
        
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Xóa thông báo lỗi cũ
            document.querySelectorAll('.error-message').forEach(el => el.innerHTML = '');
            document.getElementById('successMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
            
            // Validate form
            let isValid = true;
            
            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const userRole = parseInt(document.getElementById('userRole').value);
            const termsCheck = document.getElementById('termsCheck').checked;
            
            if (!fullName) {
                document.getElementById('fullNameError').innerHTML = 'Họ và tên là bắt buộc';
                isValid = false;
            } else if (fullName.length > 100) {
                document.getElementById('fullNameError').innerHTML = 'Họ và tên không được vượt quá 100 ký tự';
                isValid = false;
            }
            
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!email) {
                document.getElementById('emailError').innerHTML = 'Email là bắt buộc';
                isValid = false;
            } else if (!emailRegex.test(email)) {
                document.getElementById('emailError').innerHTML = 'Email không hợp lệ';
                isValid = false;
            }
            
            if (!password) {
                document.getElementById('passwordError').innerHTML = 'Mật khẩu là bắt buộc';
                isValid = false;
            } else if (password.length < 6) {
                document.getElementById('passwordError').innerHTML = 'Mật khẩu phải có ít nhất 6 ký tự';
                isValid = false;
            }
            
            if (password !== confirmPassword) {
                document.getElementById('confirmPasswordError').innerHTML = 'Mật khẩu xác nhận không khớp';
                isValid = false;
            }
            
            if (!termsCheck) {
                document.getElementById('termsError').innerHTML = 'Bạn phải đồng ý với điều khoản để tiếp tục';
                isValid = false;
            }
            
            // Validate thông tin cửa hàng nếu là người bán
            if (userRole === 2) {
                const storeName = document.getElementById('storeName').value.trim();
                const storeDescription = document.getElementById('storeDescription').value.trim();
                const storeAddress = document.getElementById('storeAddress').value.trim();
                const storePhoneNumber = document.getElementById('storePhoneNumber').value.trim();
                
                if (!storeName) {
                    document.getElementById('storeNameError').innerHTML = 'Tên cửa hàng là bắt buộc';
                    isValid = false;
                }
                
                if (!storeDescription) {
                    document.getElementById('storeDescriptionError').innerHTML = 'Mô tả cửa hàng là bắt buộc';
                    isValid = false;
                }
                
                if (!storeAddress) {
                    document.getElementById('storeAddressError').innerHTML = 'Địa chỉ cửa hàng là bắt buộc';
                    isValid = false;
                }
                
                if (!storePhoneNumber) {
                    document.getElementById('storePhoneNumberError').innerHTML = 'Số điện thoại cửa hàng là bắt buộc';
                    isValid = false;
                }
            }
            
            if (!isValid) return;
            
            // Sử dụng FormData để gửi dữ liệu bao gồm cả file
            const formData = new FormData();
            formData.append('fullName', fullName);
            formData.append('email', email);
            formData.append('password', password);
            formData.append('userRole', userRole);
            
            // Thêm thông tin cửa hàng nếu là người bán
            if (userRole === 2) {
                formData.append('storeName', document.getElementById('storeName').value.trim());
                formData.append('storeDescription', document.getElementById('storeDescription').value.trim());
                formData.append('storeAddress', document.getElementById('storeAddress').value.trim());
                formData.append('storePhoneNumber', document.getElementById('storePhoneNumber').value.trim());
                formData.append('storeEmail', document.getElementById('storeEmail').value.trim());
                formData.append('businessType', document.getElementById('businessType').value);
                
                // Thêm file logo nếu có
                const logoFile = document.getElementById('logoFile').files[0];
                if (logoFile) {
                    formData.append('logoFile', logoFile);
                }
            }
            
            // Gửi request đăng ký với FormData
            authService.fetchApi("/Register", 'POST', formData, true)
            .then(response => {
                if (response.status === 200) {
                    // Hiển thị thông báo thành công
                    const successMsg = document.getElementById('successMessage');
                    successMsg.textContent = response.message;
                    successMsg.style.display = 'block';
                    
                    // Redirect sau 2 giây nếu là User, hoặc hiển thị thông báo nếu là Seller
                    if (response.user.role === 3) { // User
                        setTimeout(() => {
                            window.location.href = '/';
                        }, 2000);
                    }
                } else {
                    const errorMsg = document.getElementById('errorMessage');
                    errorMsg.textContent = response.message;
                    errorMsg.style.display = 'block';
                    throw new Error(response.message || 'Đã xảy ra lỗi khi đăng ký');
                }
            })
            .catch(error => {
                console.error('Lỗi đăng ký:', error);
                const errorMsg = document.getElementById('errorMessage');
                errorMsg.textContent = error.message || 'Đã xảy ra lỗi khi đăng ký';
                errorMsg.style.display = 'block';
            });
        });
    </script>
